<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allGameCard"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <TextView
                android:text="Game Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gameNameText"
                android:textStyle="normal|bold"
                android:textSize="25sp"
                android:layout_alignTop="@+id/joinButton"
                android:layout_alignStart="@+id/playerNamesText" />

            <TextView
                android:text="Player Names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:id="@+id/playerNamesText"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/joinButton" />

            <Button
                android:text="Join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/joinButton"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>